<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="text"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ucw_spinner_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ucw_extra"
            android:drawablePadding="@dimen/ucw_spinner_content_inset"
            android:ellipsize="marquee"
            android:gravity="start|center_vertical"
            android:padding="0dp"
            android:singleLine="true"
            android:text="@{text}"
            android:textAlignment="gravity"
            android:textColor="@color/ucw_solid_white"
            app:drawableStartCompat="@drawable/ucw_ic_arrow_drop_down_white_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:drawableStart="@drawable/ucw_ic_arrow_drop_down_white_24dp"
            tools:text="Test" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>